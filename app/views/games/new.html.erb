<h1>New Game</h1>
<%= @letters %>

<h1>What is the longest word you can find ?</h1>
<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%#= hidden_field_tag :letters, @letters %>
  <input type="text" name="user_word">
  <input type="hidden" name="letters" value="<%= @letters.join %>">
  <input type="submit">
</form>
